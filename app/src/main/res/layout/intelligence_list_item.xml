<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/lin_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/user_img">


                <TextView
                    android:id="@+id/tv_decade_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@mipmap/choose_several_several_icon"
                    android:text=""
                    android:layout_marginRight="17dp"
                    android:visibility="gone"
                    android:textColor="#F78500"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tv_even_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/even_the_red_icon"
                    android:text=""
                    android:visibility="gone"
                    android:drawablePadding="2dp"
                    android:textColor="#F78500"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tv_even_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/even_black_cion"
                    android:text=""
                    android:visibility="gone"
                    android:drawablePadding="2dp"
                    android:textColor="#425A73"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@+id/user_img"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:gravity="right|bottom"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/rate_of_return_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#dd4e00"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rate_of_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="近7场回报率"
                    android:visibility="gone"
                    android:textColor="#b8b8b8"
                    android:textSize="11sp" />


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#555555"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/match_border"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="13dp">

            <LinearLayout
                android:id="@+id/match_type_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginStart="7dp"
                android:orientation="horizontal">

                <!--免费-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_isfee_icon"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                         />

                    <TextView
                        android:id="@+id/loss_per_cent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#dd4E00"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/Parlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#b8b8b8"
                        android:textSize="11sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#b8b8b8"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <!--比赛列表-->

            <LinearLayout
                android:id="@+id/lin_match_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:visibility="gone"
                android:padding="8dp"
                android:src="@mipmap/arrows_bottom_style2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textColor="#b8b8b8"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_look_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="#b8b8b8"
                android:textSize="11sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bdbdbd"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#f3f3f3"></View>

    </LinearLayout>

    <ImageView
        android:id="@+id/Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:layout_marginRight="40dp"
        android:layout_gravity="bottom|right"
        />

</FrameLayout>